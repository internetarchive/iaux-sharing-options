{
  "name": "@internetarchive/ia-sharing-options",
  "version": "0.0.0",
  "description": "Sharing options for Internet Archive items",
  "author": "Shane Riley, Internet Archive",
  "license": "AGPL-3.0-only",
  "main": "index.js",
  "module": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js . --fix --ignore-path .gitignore",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false"
  },
  "dependencies": {
    "lit-html": "^1.1.2",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@internetarchive/ia-icons": "^0.5.0",
    "@internetarchive/ia-menu-slider": "0.0.2-alpha.09d6bce",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.23.0",
    "eslint": "^6.1.0",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "sinon": "^9.0.3"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
